    </header>
    <main>
        <div id="cartItems">
            <ul>
                <% for(let p of selectedItems) %>
                    <li>
                        Item<!-- Put Item here -->
                    </li>
                    <% }%>
                        <% if(cartItems===0) { %>
                            <p id="emptyCart">Your Cart is empty! You can add items on the <a href="shop.html">Shop</a>
                                page!
                            </p>
                            <% } %>
            </ul>

        </div>
        <div id="cartNavigation">
            <button id="continueShopping"><a href="shop.html">Continue Shopping</a></button>
            <button id="checkoutButton">Checkout</button>
        </div>
    </main>
    <footer>

    </footer>
